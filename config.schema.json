{
  "pluginAlias": "WattBox IP",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "type": "array",
        "title": "WattBox Devices",
        "items": {
          "type": "object",
          "title": "WattBox Device",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true,
              "default": "My WattBox"
            },
            "host": {
              "title": "Hostname or IP Address",
              "type": "string",
              "required": true,
              "format": "hostname",
              "placeholder": "10.0.0.10"
            },
            "username": {
              "title": "Username",
              "type": "string",
              "required": true
            },
            "password": {
              "title": "Password",
              "type": "string",
              "required": true
            },
            "serviceTag": {
              "title": "Service Tag",
              "type": "string",
              "required": true,
              "placeholder": "ST1234567890ABCD"
            },
            "outletsReadOnly": {
              "title": "All Outlets Read Only",
              "type": "boolean",
              "required": false
            },
            "outletsResetOnly": {
              "title": "All Outlets Reset Only",
              "type": "boolean",
              "required": false
            },
            "excludedOutlets": {
              "title": "Excluded Outlets",
              "type": "array",
              "required": false,
              "items": {
                "title": "Excluded Outlet Name",
                "type": "string"
              }
            }
          }
        }
      },
      "debug": {
        "title": "Debug Logging",
        "type": "boolean",
        "required": false
      },
      "pollInterval": {
        "title": "Polling Interval (seconds)",
        "type": "integer",
        "required": false,
        "default": 10
      }
    }
  },
  "layout": [
    {
      "type": "section",
      "items": [
        {
          "key": "devices",
          "type": "array",
          "orderable": false,
          "buttonText": "Add WattBox Device",
          "items": [
            "devices[].name",
            "devices[].host",
            "devices[].username",
            "devices[].password",
            "devices[].serviceTag",
            "devices[].outletsReadOnly",
            "devices[].outletsResetOnly",
            {
              "key": "devices[].excludedOutlets",
              "type": "array",
              "name": "Excluded Outlets",
              "orderable": false,
              "buttonText": "Add Excluded Outlet",
              "items": ["devices[].excludedOutlets[]"]
            }
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "items": [
            "debug",
            "pollInterval"
          ]
        }
      ]
    }
  ]
}
